            <!-- Activities List -->
            <div class="activities-list" id="activitiesList">
                <div class="empty-state">
                    <i class="fas fa-folder-open"></i>
                    <h3>Sin Actividades Registradas</h3>
                    <p>Comienza agregando tu primera actividad usando el formulario superior</p>
                </div>
