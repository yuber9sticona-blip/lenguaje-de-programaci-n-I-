                    <div class="form-group">
                        <label for="activityDescription">
                            <i class="fas fa-align-left"></i> Descripción Técnica
                        </label>
                        <textarea id="activityDescription" placeholder="Describe los objetivos, tecnologías utilizadas, algoritmos implementados y resultados obtenidos..." required></textarea>
                    </div>

                    <div class="form-group">
                        <label>
                            <i class="fas fa-file-pdf"></i> Documentación PDF
                        </label>
                        <div class="file-input-wrapper">
                            <input type="file" id="pdfFiles" accept=".pdf" multiple>
                            <label for="pdfFiles" class="file-input-label">
                                <i class="fas fa-cloud-upload-alt"></i>
                                Cargar Archivos PDF
                            </label>
                        </div>
                        <div class="selected-files" id="selectedFiles">
                            <span style="color: var(--text-secondary); font-size: 0.95em;">
                                <i class="fas fa-info-circle"></i> No hay archivos seleccionados
                            </span>
                        </div>
