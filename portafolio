                <div class="stat-icon"><i class="fas fa-trophy"></i></div>
                <div class="stat-number" data-count="100">0</div>
                <div class="stat-label">% Dedicación</div>
            </div>
        </div>

        <!-- Presentation Section -->
        <section class="presentation" id="presentacion" data-aos="fade-up">
            <div class="section-header">
                <i class="fas fa-graduation-cap section-icon"></i>
                <h2>Presentación del Curso</h2>
            </div>
            
            <div class="presentation-grid">
                <div class="info-card" data-aos="flip-left" data-aos-delay="100">
                    <h3><i class="fas fa-book-open"></i> Sobre el Curso</h3>
