        <!-- Activities Section -->
        <section class="activities-section" id="actividades" data-aos="fade-up">
            <div class="section-header">
                <i class="fas fa-tasks section-icon"></i>
                <h2>Actividades y Proyectos</h2>
            </div>

            <!-- Add Activity Form -->
            <div class="add-activity-form" data-aos="zoom-in">
                <h3><i class="fas fa-plus-circle"></i> Nueva Actividad</h3>
                
                <form id="activityForm">
                    <div class="form-group">
                        <label for="activityTitle">
                            <i class="fas fa-terminal"></i> Título del Proyecto
                        </label>
                        <input type="text" id="activityTitle" placeholder="Ej: Sistema de Gestión con Estructuras de Datos" required>
